{
  "name": "prenotami-monitor",
  "version": "2.1.0",
  "description": "Production-ready monitor for Italian consulate appointments on Prenotami",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "monitor.ts",
  "scripts": {
    "start": "tsx monitor.ts",
    "start:once": "tsx monitor.ts --once",
    "start:manual": "tsx monitor.ts --manual",
    "start:health": "tsx monitor.ts --health",
    "build": "tsc",
    "test": "node --import tsx --test monitor.test.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "setup": "bash setup.sh"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  }
}
